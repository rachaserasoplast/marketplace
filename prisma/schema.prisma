generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

enum Condition {
  New
  Used
}

model Product {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  slug      String?   @unique
  category  String
  condition Condition
  price     Float
  specs     String
  images    String    // JSON string of image URLs array
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  username String @unique
  password String
}

model Test {
  id Int @id @default(autoincrement())
}
